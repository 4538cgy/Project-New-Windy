<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".navigationlobby.AddBuyContentActivity">

    <data>
        <variable
            name="buycontent"
            type="com.uos.project_new_windy.navigationlobby.AddBuyContentActivity" />
        
    </data>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/activity_add_buy_content_constraint_top_bar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="match_parent"
            android:layout_height="50dp"

            >

            <ImageButton
                android:id="@+id/activity_add_buy_content_imagebutton_back"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_baseline_arrow_back_ios_24"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="구매 요청 게시글 작성"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                app:layout_constraintLeft_toRightOf="@+id/activity_add_buy_content_imagebutton_back"
                android:gravity="center"
                />

            <Button
                android:id="@+id/activity_add_buy_content_button_upload"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="작성 완료"
                android:textColor="@color/colorLightGreen"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@android:color/transparent"
                android:textSize="18dp"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGray"
            android:layout_margin="8dp"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >


            <Spinner
                android:id="@+id/activity_add_buy_content_spinner_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                />



        </androidx.constraintlayout.widget.ConstraintLayout>
        
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGray"
            android:layout_margin="8dp"
            />
        
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/activity_add_buy_content_imageview_product_image"
            >

            <EditText
                android:id="@+id/activity_add_buy_content_edittext_costmin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/activity_add_buy_content_edittext_costmax"
                android:paddingLeft="16dp"
                android:hint="최소 희망 금액"
                android:background="@android:color/transparent"
                android:layout_margin="8dp"
                android:inputType="number"
                android:maxLength="10"
                />

            <EditText
                android:id="@+id/activity_add_buy_content_edittext_costmax"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/activity_add_buy_content_edittext_costmin"
                android:paddingLeft="16dp"
                android:hint="최대 희망 금액"
                android:background="@android:color/transparent"
                android:layout_margin="8dp"
                android:inputType="number"
                android:maxLength="10"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGray"
            android:layout_margin="8dp"
            />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_add_buy_content_imageview_product_image"
            >

            <ImageView
                android:id="@+id/activity_add_buy_content_imageview_photo"
                android:layout_width="200dp"
                android:layout_height="200dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <EditText
                android:id="@+id/activity_add_buy_content_edittext_explain"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@+id/activity_add_buy_content_imageview_photo"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:hint="내용을 적어주세요"
                android:paddingLeft="16dp"
                android:background="@android:color/transparent"
                android:layout_margin="8dp"
                />

            <Button
                android:id="@+id/activity_add_buy_content_imageview_product_image"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/background_roung_white_stroke_green_16dp"
                android:text="+ 사진 추가"
                android:drawableRight="@drawable/ic_add_photo_button"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_margin="12dp"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"
                android:textSize="16dp"
                android:paddingHorizontal="12dp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
    
</layout>