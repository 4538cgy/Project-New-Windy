<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".navigationlobby.AddContentActivity">

    <data>
        <variable
            name="addnormalcontent"
            type="com.uos.project_new_windy.navigationlobby.AddContentActivity" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/activity_add_content_constraint_top_bar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="match_parent"
            android:layout_height="50dp"

            >

            <ImageButton
                android:id="@+id/activity_add_content_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_baseline_arrow_back_ios_24"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="자유 게시글 작성"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                app:layout_constraintLeft_toRightOf="@+id/activity_add_content_image"
                android:gravity="center"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="작성 완료"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@android:color/transparent"
                android:textSize="18dp"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <LinearLayout
        android:layout_margin="8dp"
        android:id="@+id/activity_add_content_layout_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        android:gravity="right"
        >

        <!--
        <EditText
            android:id="@+id/activity_add_content_edittext_title"
            android:layout_weight="0.9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:hint="제목"
            />
            -->

        <Button
            android:layout_weight="0.1"
            android:id="@+id/activity_add_content_button_upload"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="게시글 올리기"
            />

    </LinearLayout>


    <EditText
        android:id="@+id/activity_add_content_edittext_content"
        app:layout_constraintTop_toBottomOf="@+id/activity_add_content_layout_top"
        app:layout_constraintBottom_toBottomOf="parent"

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="top"
        android:hint="hello"
        android:scrollbars="vertical"
        android:background="@android:color/transparent"
        android:layout_margin="12dp"
        />


    <Button
        android:id="@+id/activity_add_content_button_add_photo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/activity_add_content_recycler_photo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@+id/activity_add_content_recycler_photo"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="addPhoto"
        />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/activity_add_content_recycler_photo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/activity_add_content_button_add_photo"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        />


    </androidx.constraintlayout.widget.ConstraintLayout>



</layout>