<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".navigationlobby.AddSellContentActivity">
    
    <data>
        <variable
            name="sellcontent"
            type="com.uos.project_new_windy.navigationlobby.AddSellContentActivity" />
        
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/activity_add_content_constraint_top_bar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="50dp"

        >

        <ImageButton
            android:id="@+id/activity_add_content_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_baseline_arrow_back_ios_24"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="구매 요청 게시글 작성"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            app:layout_constraintLeft_toRightOf="@+id/activity_add_content_image"
            android:gravity="center"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="작성 완료"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@android:color/transparent"
            android:textSize="18dp"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>

</layout>