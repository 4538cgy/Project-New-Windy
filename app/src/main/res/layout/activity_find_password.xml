<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".FindPasswordActivity">

    <data>
        <variable
            name="activityfindpassword"
            type="com.uos.project_new_windy.FindPasswordActivity" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <EditText
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/activity_find_password_edittext_phonenumber"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/background_round_white_stroke_black"
            android:layout_margin="8dp"
            android:hint="가입시 사용한 이메일 주소"
            android:paddingLeft="8dp"
            />

        <Button
            android:id="@+id/activity_find_password_button_send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/activity_find_password_edittext_phonenumber"
            android:background="@drawable/background_round_windy_green"
            android:layout_margin="8dp"
            android:text="인증"
            android:textStyle="bold"
            android:textSize="16dp"
            android:textColor="@color/colorWhite"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>