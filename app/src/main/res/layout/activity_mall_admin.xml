<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".newwindymall.MallAdminActivity">

    <data>
        <variable
            name="activitymalladmin"
            type="com.uos.project_new_windy.newwindymall.MallAdminActivity" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/activity_mall_admin_const_top_bar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageButton
                android:id="@+id/activity_mall_admin_imagebutton_close"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_baseline_close_24"
                android:layout_margin="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:background="@android:color/transparent"
                app:layout_constraintBottom_toBottomOf="parent"
                />

            <TextView
                app:layout_constraintLeft_toRightOf="@+id/activity_mall_admin_imagebutton_close"
                app:layout_constraintTop_toTopOf="@+id/activity_mall_admin_imagebutton_close"
                app:layout_constraintBottom_toBottomOf="@+id/activity_mall_admin_imagebutton_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="관리자 페이지"
                android:textSize="16dp"
                android:layout_marginLeft="8dp"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <Button
            android:id="@+id/activity_mall_admin_button_order_list"
            app:layout_constraintTop_toBottomOf="@+id/activity_mall_admin_const_top_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="주문 요청 확인하기"
            android:background="@drawable/background_round_windy_green"
            android:layout_marginHorizontal="8dp"
            android:textColor="@color/colorWhite"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>