<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="bottomsheet"
            type="com.uos.project_new_windy.bottomsheet.BottomSheetDialogWriteCategory"
            />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bottom_sheet_select_category_viewgroup_buy"
            android:onClick="@{bottomsheet.groupClick}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/bottom_sheet_select_category_imageview_buy"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                android:src="@drawable/ic_add_buy_post_button"
                android:scaleType="centerInside"
                android:background="@android:color/transparent"

                />
            <TextView
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/bottom_sheet_select_category_imageview_buy"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/bottom_sheet_select_category_textview_buy_content"
                android:id="@+id/bottom_sheet_select_category_textview_buy_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="구매 글 작성"
                android:textSize="24dp"
                android:textStyle="bold"
                android:textColor="#000000"
                />
            <TextView
                app:layout_constraintTop_toBottomOf="@+id/bottom_sheet_select_category_textview_buy_title"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/bottom_sheet_select_category_imageview_buy"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/bottom_sheet_select_category_textview_buy_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="원하는 물건을 구매요청 할 수 있어요"
                android:textSize="16dp"
                android:textStyle="normal"
                android:textColor="@color/colorBlack"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bottom_sheet_select_category_viewgroup_sell"
            android:onClick="@{bottomsheet.groupClick}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/bottom_sheet_select_category_imageview_sell"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                android:src="@drawable/ic_add_sell_post_button"
                android:scaleType="centerInside"
                android:background="@android:color/transparent"

                />
            <TextView
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/bottom_sheet_select_category_imageview_sell"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/bottom_sheet_select_category_textview_sell_content"
                android:id="@+id/bottom_sheet_select_category_textview_sell_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="판매 글 작성"
                android:textSize="24dp"
                android:textStyle="bold"
                android:textColor="#000000"
                />
            <TextView
                app:layout_constraintTop_toBottomOf="@+id/bottom_sheet_select_category_textview_sell_title"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/bottom_sheet_select_category_imageview_sell"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/bottom_sheet_select_category_textview_sell_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="판매을 판매 할 수 있어요 ( 실명인증 필요 )"
                android:textSize="16dp"
                android:textStyle="normal"
                android:textColor="@color/colorBlack"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bottom_sheet_select_category_viewgroup_normal"
            android:onClick="@{bottomsheet.groupClick}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/bottom_sheet_select_category_imageview_post"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                android:src="@drawable/ic_new_spead_button"
                android:scaleType="centerInside"
                android:background="@android:color/transparent"

                />
            <TextView
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/bottom_sheet_select_category_imageview_post"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/bottom_sheet_select_category_textview_post_content"
                android:id="@+id/bottom_sheet_select_category_textview_post_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="새 소식 글 작성"
                android:textSize="24dp"
                android:textStyle="bold"
                android:textColor="#000000"
                />
            <TextView
                app:layout_constraintTop_toBottomOf="@+id/bottom_sheet_select_category_textview_post_title"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/bottom_sheet_select_category_imageview_post"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/bottom_sheet_select_category_textview_post_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="자유롭게 소통해보세요."
                android:textSize="16dp"
                android:textStyle="normal"
                android:textColor="@color/colorBlack"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bottom_sheet_select_category_viewgroup_membership"
            android:onClick="@{bottomsheet.groupClick}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/bottom_sheet_select_category_imageview_membership"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                android:src="@drawable/ic_baseline_star_24"
                android:scaleType="centerInside"
                android:background="@android:color/transparent"

                />
            <TextView
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/bottom_sheet_select_category_imageview_membership"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/bottom_sheet_select_category_textview_membership_content"
                android:id="@+id/bottom_sheet_select_category_textview_membership_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="제휴 게시글 작성"
                android:textSize="24dp"
                android:textStyle="bold"
                android:textColor="#000000"
                />
            <TextView
                app:layout_constraintTop_toBottomOf="@+id/bottom_sheet_select_category_textview_membership_title"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/bottom_sheet_select_category_imageview_membership"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/bottom_sheet_select_category_textview_membership_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="자유롭게 소통해보세요."
                android:textSize="16dp"
                android:textStyle="normal"
                android:textColor="@color/colorBlack"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>