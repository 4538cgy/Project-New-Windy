<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="itemfollowlist"
            type="com.uos.project_new_windy.model.FollowDTO" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/item_follow_list_imageview_profile"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:scaleType="centerInside"
            android:src="@color/colorBlack"
            android:layout_margin="8dp"
            />

        <TextView
            android:id="@+id/item_follow_list_textview_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="닉네임"
            app:layout_constraintLeft_toRightOf="@+id/item_follow_list_imageview_profile"
            android:textSize="22dp"
            android:textColor="@color/colorBlack"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="12dp"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>