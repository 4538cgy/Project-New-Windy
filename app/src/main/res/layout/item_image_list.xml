<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/item_image_list_const_all"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/item_image_list_imageview"
        android:layout_width="80dp"
        android:layout_height="80dp"
        />

    <ImageButton
        android:id="@+id/item_image_list_button_delete_photo"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintRight_toRightOf="@+id/item_image_list_imageview"
        app:layout_constraintBottom_toBottomOf="@+id/item_image_list_imageview"
        android:background="@drawable/background_circle_black"
        android:src="@drawable/ic_baseline_clear_24"
        android:scaleType="centerInside"
        />

</androidx.constraintlayout.widget.ConstraintLayout>