<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <data>
        <variable
            name="itempostnormalsearchresult"
            type="com.uos.project_new_windy.model.contentdto.ContentNormalDTO" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_post_normal_search_result_const_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:background="@drawable/background_round_white"
        android:elevation="6dp"
        >

        <ImageView
            android:id="@+id/item_post_normal_search_result_imageview_photo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="12dp"
            />

        <TextView
            android:id="@+id/item_post_normal_search_result_textview_explain"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="@{itempostnormalsearchresult.explain}"
            app:layout_constraintLeft_toRightOf="@+id/item_post_normal_search_result_imageview_photo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="12dp"
            />





    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>